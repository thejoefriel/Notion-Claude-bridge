{
  "name": "notion-bridge",
  "version": "1.0.0",
  "description": "A lightweight MCP server that proxies authorised users to a shared Notion workspace via Claude",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "seed": "tsx scripts/seed-admin.ts",
    "migrate": "tsx scripts/migrate.ts",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "notion",
    "mcp",
    "claude",
    "bridge"
  ],
  "author": "Yalla Cooperative",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@notionhq/client": "^2.2.15",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.7.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/node": "^22.12.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.19.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

# Notion Bridge Configuration
# Copy this file to .env and fill in the values

# Notion internal integration token
# Get this from https://www.notion.so/profile/integrations
NOTION_TOKEN=

# Base URL where Notion Bridge is hosted (no trailing slash)
BASE_URL=https://notion-bridge.yalla.coop

# Session secret for admin panel (generate a random string)
SESSION_SECRET=

# OAuth client credentials (for Claude's Connectors)
OAUTH_CLIENT_ID=notion-bridge
OAUTH_CLIENT_SECRET=

# Server port
PORT=3847

# Database path
DB_PATH=./data.db

# Rate limit: max requests per user per minute
RATE_LIMIT_PER_MINUTE=30
